{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AitoType",
  "version": "0.1.0",
  "identifier": "com.aitotype.app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "AitoType - 语音转文字",
        "label": "main",
        "width": 960,
        "height": 720,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "resizable": true,
        "visible": true,
        "decorations": true,
        "transparent": false
      },
      {
        "title": "AitoType Overlay",
        "label": "overlay",
        "url": "overlay.html",
        "width": 220,
        "height": 240,
        "center": true,
        "resizable": false,
        "visible": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "focus": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
